<?xml version="1.0"?>
<data>

  <!-- action                -->
  <!-- 1: print parsed files -->
  <!-- 2: print data model   -->
  <!-- 3. create html        -->
  <!-- else no output        -->
  <action>
    1
  </action>
  
  <O2general>
    
    <mainDir>
      <local>
        /home/pbuehler/alice/O2
      </local>
    
      <GitHub> 
        https://github.com/AliceO2Group/AliceO2/blob/dev
      </GitHub>
      
    </mainDir>

    <!-- relative to mainDir/local -->
    <DataModelHeader>
      Framework/Core/include/Framework/AnalysisDataModel.h
    </DataModelHeader>
    
    <!-- title for tables created by default when reading AO2D.root -->
    <producer>
      AO2D files
    </producer>
  
    <exePreamble>
      o2-analysis-
    </exePreamble>
    
    <CEdeclarationString>
      o2_add_dpl_workflow
    </CEdeclarationString>
    
  </O2general>
  
  <!-- where to get the header files from -->
  <headerFiles>
  
    <!-- relative to mainDir/local -->
    <mainDir>
      Analysis/DataModel/include/AnalysisDataModel
    </mainDir>
    
    <!-- relative to headerFiles/mainDir -->
    <subDirs>
      ., PID
    </subDirs>
    
    <fileName>
      *.h
    </fileName>
    
  </headerFiles>

  <!-- where to get the CMakeLists.txt files from -->
  <CMLfiles>
  
    <!-- relative to mainDir/local -->
    <mainDir>
      Analysis/Tasks
    </mainDir>
    
    <!-- relative to CMLfiles/mainDir -->
    <subDirs>
      ., PID, PWGLF, PWGHF
    </subDirs>
    
    <fileName>
      CMakeLists.txt
    </fileName>
    
    <CEdeclaration>
      o2_add_dpl_workflow
    </CEdeclaration>
    
  </CMLfiles>

  <!-- where to get the tasks code files from -->
  <codeFiles>
  
    <!-- relative to mainDir/local -->
    <mainDir>
      Analysis/Tasks
    </mainDir>
    
    <!-- relative to codeFiles/mainDir -->
    <subDirs>
      ., PID, PWGLF, PWGHF
    </subDirs>
    
    <fileName>
      *.cxx
    </fileName>
    
  </codeFiles>

</data>
